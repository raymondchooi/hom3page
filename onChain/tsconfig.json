{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "./contracts",
    "./scripts",
    "./tests",
    "./types",
    "./tasks",
    "./deploy",
    "./bin",
    "./reports"
  ],
  "files": ["./hardhat.config.ts"],
  "paths": { "~/*": ["./*"] }
}
